@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

    <style>
        /* CSS Tùy chỉnh để đảm bảo form căn giữa và hình ảnh hiển thị đúng */
        .vh-100 {
            height: 100vh;
        }

        /* Đảm bảo hình ảnh chiếm toàn bộ chiều cao trong cột */
        .img-fluid {
            max-width: 100%;
            height: 100%; /* Đảm bảo chiều cao hình ảnh bằng chiều cao cột */
            object-fit: cover; /* Cắt ảnh nếu cần để lấp đầy */
        }

        /* Tăng khoảng cách chữ cho tiêu đề phụ */
        .fw-normal {
            letter-spacing: 1px;
        }

        /* Giữ màu nền gốc của form */
        body {
            background-color: #9A616D;
        }
    </style>
</head>
<body>

    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">

                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>

                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black w-100">

                                    <form>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Logo</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div class="form-floating mb-4">
                                            <input type="email" id="form2Example17" class="form-control form-control-lg" placeholder="Email address" />
                                            <label for="form2Example17">Email address</label>
                                        </div>

                                        <div class="form-floating mb-4">
                                            <input type="password" id="form2Example27" class="form-control form-control-lg" placeholder="Password" />
                                            <label for="form2Example27">Password</label>
                                        </div>

                                        <div class="d-grid pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg" type="submit">Login</button>
                                        </div>

                                        <a class="small text-muted" href="#!">Forgot password?</a>

                                        <p class="mb-5 pb-lg-2 mt-2" style="color: #393f81;">
                                            Don't have an account?
                                            <a href="#!" style="color: #393f81; text-decoration: none;">Register here</a>
                                        </p>

                                        <a href="#!" class="small text-muted me-3">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
